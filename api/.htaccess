# Enable PHP processing
AddHandler application/x-httpd-php .php

# Set default charset
AddDefaultCharset UTF-8

# Prevent directory listing
Options -Indexes

# Allow all HTTP methods (GET, POST, PUT, DELETE, OPTIONS)
<Limit GET POST PUT DELETE OPTIONS>
    Order allow,deny
    Allow from all
</Limit>

# Allow POST method specifically
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} ^(POST|GET|PUT|DELETE|OPTIONS)$ [NC]
    RewriteRule .* - [L]
</IfModule>

# Set JSON content type for API endpoints (only if mod_headers is enabled)
<IfModule mod_headers.c>
    <FilesMatch "\.php$">
        Header set Content-Type "application/json; charset=utf-8"
    </FilesMatch>
</IfModule>
